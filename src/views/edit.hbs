<div class="container">
  <div class="row">
    <div class="col-md-5 offset-md-3">
      <div class="card bg-dark p-4 text-white">
        <div class="card-body">
          <h2 class="card-title">Update the task</h2>
          <form action="/edit/{{task._id}}" method="POST">
            <div class="mb-3">
              <label for="title" class="form-label">Title</label>
              <input type="text" name="title" id="title" placeholder="title" value="{{task.title}}"
                class="form-control bg-dark text-white">
            </div>
            <div class="mb-3">
              <label for="description" class="form-label">Description</label>
              <textarea type="text" name="description" placeholder="Add a description"
                class="form-control bg-dark text-white">{{task.description}}</textarea>
            </div>
            <button class="btn btn-sm btn-primary">Update</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>