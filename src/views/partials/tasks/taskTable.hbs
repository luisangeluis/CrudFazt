{{#if tasks}}

<table class="table table-bordered table-hover table-dark">
  <thead>
    <tr>
      <th>N.</th>
      <th>Title</th>
      <th>Description</th>
      <th>Operations</th>
    </tr>
  </thead>
  <tbody>
    {{#each tasks}}
    <tr>
      <td>{{@index}}</td>
      <td>{{title}}</td>
      <td>{{description}}</td>
      <td>
        {{#if done}}
        <a href="/toggleDone/{{_id}}" class="btn btn-dark btn-sm">Undone</a>
        {{else}}
        <a href="/toggleDone/{{_id}}" class="btn btn-success btn-sm">Done</a>
        {{/if}}
        <a href="/delete/{{_id}}" class="btn btn-danger btn-sm">Delete</a>
        <a href="/edit/{{_id}}" class="btn btn-info btn-sm">Update</a>
      </td>
    </tr>

    {{/each}}
  </tbody>
</table>
{{else}}
<div class="h-100 d-flex align-items-center justify-content-center">
  <div class="text-center text-white">
    <h2>No tasks</h2>
    <img src="/icons/book.png" class="w-25" alt="">
  </div>

</div>
{{/if}}